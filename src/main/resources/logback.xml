<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>JEE PAC4J CDI DEMO %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.pac4j.j2e" level="DEBUG">
  <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.pac4j.core.engine" level="DEBUG">
  <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.pac4j.cas" level="DEBUG">
  	<appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.pac4j.demo" level="DEBUG">
  	<appender-ref ref="STDOUT" />
  </logger>
  <!--logger name="org.pac4j.saml" level="DEBUG" />
  <logger name="org.opensaml" level="DEBUG" /-->

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
